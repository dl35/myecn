#docker rmi $(docker images -q)

# remove all process
# docker rm $(docker ps -a -q)


# supprimer tous les containers

docker  stop $(docker ps -a -q)
docker rm $(docker ps -a -q)

# start / stop
docker start <container-name/ID>
docker stop <container-name/ID>




